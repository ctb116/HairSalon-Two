@{
  Layout = "_Layout";
}
@using HairSalon.Models;

<h1>Your Clients</h1>

<a href="/">Home</a><br>
<a href="/clients/new">Add a new client</a>


<form action="/clients/deleteall" method="post">
    <label for="truncateClients">Delete all Clients</label>
    <button type="submit">Remove all Clients</button>

<br><br><br>

<table class="table">
  <tbody>
    @foreach(var client in Model)
    {
      <tr>
        <td><strong>Name:</strong> @client.Name  |  <strong>Birthday:</strong> @client.Birthday  |  <a href="/clients/@client.Id/edit">Edit</a></td>
      </tr>
    }
  </tbody>
</table
